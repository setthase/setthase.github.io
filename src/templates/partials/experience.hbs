<h2>Experience</h2>

{{#each experience }}
<div data-id="{{ id }}">
  <header>
    <h3>{{ role }}</h3>
    <h4>
      {{ company }} | {{ type }} |
      <span data-timestamp="{{ startDate }}">{{ toDate startDate }}</span> -
      <span data-timestamp="{{ endDate }}">{{ toDate endDate }}</span>
    </h4>
  </header>

  <ul>
    {{#each description}}
    <li>{{ this }}</li>
    {{/each}}
  </ul>

  <footer>
    <p>
      <strong>Skills:</strong>
      {{#each skills}}
      <span data-id="{{this}}">{{ expandSkillId this }}</span>
      {{/each}}
    </p>
  </footer>
</div>
{{/each}}
